/*********************** Common to All ************************/

QFrame, QWidget {
  background: #FFFFFF; /* Light background color */
  color: #000000; /* Dark text color */
  font-family: Segoe UI, sans-serif; /* Windows 11 font */
  margin: 2px 0px 2px 0px;
  font-weight: 500;
}

QFrame {
  background: #FFFFFF;
  border-radius: 8px;
}

QLabel {
  color: #000000;
}

QPushButton {
  background-color: #0277fa; /* Windows 11 accent color */
  color: #FFFFFF; /* Light text on the button */
  border: none;
  border-radius: 5px;
  padding: 6px;
}

QPushButton:hover {
  background-color: #0359C8; /* Slightly darker accent color on hover */
  color: #FFFFFF;
}

QTabWidget::pane {
  background: #FFFFFF;
  border: none;
  margin: 0px;
  padding: 0px;
}

QTabWidget::tab-bar {
  alignment: center;
}

QTabBar::tab {
  border-bottom: 3px solid #FFFFFF;
  color: #000000;
  padding: 6px;
  margin: 2px;
  background: #FFFFFF;
}

QTabBar::tab:selected {
  border-bottom: 3px solid #0359C8;
}

QTabBar::tab:hover {
  border-bottom: 3px solid #0277fa;
}

QScrollArea {
  padding: 0px;
  border: none;
}

QScrollBar:vertical {
  background: #FFFFFF;
  border: none;
  width: 10px;
  margin: 0px;
}

QScrollBar::handle:vertical {
  background: #959595; /* Windows 11 scrollbar handle color */
  border-radius: 5px;
}

QScrollBar::add-line:vertical {
  height: 0px;
}

QScrollBar::sub-line:vertical {
  height: 0px;
}

QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
  background: none;
}

QMenu {
  background-color: #FFFFFF;;
  border: none;
  border-radius: 5px;
  padding: 6px;
  margin: 2px;
  border-radius: 10px;
}

QMenu::item {
  background-color: #FFFFFF;;
  color: #000000;
  border: none;
  border-radius: 5px;
  padding: 2px 20px 2px 20px;
  font-size: 11px;
}

QMenu::item:selected {
  background-color: #0277fa;
  color: #FFFFFF;
}

QMenu::item:disabled {
  color: gray;
}

QLineEdit {
  background-color: #FFFFFF;;
  color: #000000;
  border: 1px solid gray;
  border-radius: 5px;
  margin: 2px;
  padding: 6px;
}

/***************** Object Names *****************/

#Status {
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 20px;
  font-weight: 600;
}
